    <form id="frmLocations" data-route="{{ path('_wanderer_init_entry_add') }}">

        <p>
          <span class="lbl">Y val</span>
          <span class="field">
            <input id="locnYVal" type="text" size="3">
            (1-20)
          </span>
        </p>
        
        <p>
          <span class="lbl">X val</span>
          <span class="field">
            <input id="locnXVal" type="text" size="3">
            (1-20)
          </span>
        </p>
        
        <p>
          <span class="lbl">Short Label</span>
          <span class="field">
            <input id="locnShortLbl" type="text" size="20">
          </span>
        </p>
      
        <p>
          <span class="lbl">Area</span>
          <span class="field">
            <input id="locnArea" type="text">
          </span>
        </p>
      
        <p>
          <span class="lbl">Description</span>
          <span class="field">
            <textarea id="locnDescription" cols="80" rows="8"></textarea>
          </span>
        </p>
        
        <p>
          <div class="lbl">Exit(s)</div>
          <div class="field">
            <div class="cBoxUnit">
              <span class="cBox">N</span>
              <input type="checkbox" name="locnExits" value="n">
            </div>
            <div class="cBoxUnit">
              <span class="cBox">NE</span>
              <input type="checkbox" name="locnExits" value="ne">
            </div>
            <div class="cBoxUnit">
              <span class="cBox">E</span>
              <input type="checkbox" name="locnExits" value="e">
            </div>
            <div class="cBoxUnit">
              <span class="cBox">SE</span>
              <input type="checkbox" name="locnExits" value="se">
            </div>
            <div class="cBoxUnit">
              <span class="cBox">S</span>
              <input type="checkbox" name="locnExits" value="s">
            </div>
            <div class="cBoxUnit">
              <span class="cBox">SW</span>
              <input type="checkbox" name="locnExits" value="sw">
            </div>
            <div class="cBoxUnit">
              <span class="cBox">W</span>
              <input type="checkbox" name="locnExits" value="w">
            </div>
            <div class="cBoxUnit">
              <span class="cBox">NW</span>
              <input type="checkbox" name="locnExits" value="nw">
            </div>
            <div class="cBoxUnit">
              <span class="cBox">Up</span>
              <input type="checkbox" name="locnExits" value="u">
            </div>
            <div class="cBoxUnit">
              <span class="cBox">Down</span>
              <input type="checkbox" name="locnExits" value="d">
            </div>
            
          </div>
        </p>
        <br>     

        <p>
          <span class="lbl">Storey</span>
          <span class="field">
            <select id="locnStorey">
              <option value="0">0 (underground)</option>
              <option value="1">1 (ground level)</option>
              <option value="2">2 (above ground)</option>
            </select>
          </span>
        </p>
        
        <p>
          <span class="lbl">Image</span>
          <span class="field">
            <input id="locnImage" type="file" />
          </span>
        </p>
        
        <p>
          <span class="lbl">Finish</span>
          <span class="field">
            <input id="locnSubmit" type="button" value="Submit" />
            <input id="locnReset" type="button" value="Reset" />
          </span>
        </p>
      
      </form>

