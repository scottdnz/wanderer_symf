              <input type="checkbox" name="beingVulnerable" value="c">
            </div>

            
          </div>
        </p>
        <br>     
        
       <p>
          <span class="lbl">Mood</span>
          <span class="field">
            Hostile<input type="radio" name="beingMood" value="h">
            Neutral<input type="radio" name="beingMood" value="n">
            Friendly<input type="radio" name="beingMood" value="f">
          </span>
        </p>
        
        <p>
          <span class="lbl">Y val</span>
          <span class="field">
            <input id="locnYVal" type="text" size="3">
            (0-19)
          </span>
        </p>
        
        <p>
          <span class="lbl">X val</span>
          <span class="field">
            <input id="locnXVal" type="text" size="3">
            (0-19)
          </span>
        </p>
        
        <fieldset>
        <legend>Weapons / Items</legend>
        
        <p>
          <span class="lbl">Weapon 1</span>
          <span class="field">
            <select id="beingWeaponId1">
              <option value="1">Test Sword</option>
             </select>
          </span>
        </p>
        
        <p>
          <span class="lbl">Weapon 2</span>
          <span class="field">
            <select id="beingWeaponId2">
              <option value=""></option>
              <option value="2">Test Sword</option>
             </select>
          </span>
        </p>  
        
        <p>
          <span class="lbl">Weapon 3</span>
          <span class="field">
            <select id="beingWeaponId3">
              <option value=""></option>
              <option value="3">Test Sword</option>
             </select>
