        <p>
          <span class="lbl">HP</span>
          <span class="field">
            <input id="beingHP" type="text" size="3">
          </span> (0-1000)
        </p>
        
        <p>
          <span class="lbl">Level</span>
          <span class="field">
            <input id="beingLevel" type="text" size="3">
          </span> (1-20)
        </p>
        
        <p>
          <span class="lbl">MP</span>
          <span class="field">
            <input id="beingMP" type="text" size="3">
          </span> (0-500)
        </p>
        
        <p>
          <span class="lbl">Defence</span>
          <span class="field">
            <input id="beingDefence" type="text" size="3">
          </span> (1-50)
        </p>
        
        <fieldset>
        <legend>Statistics</legend>
        <p>
          <span class="lbl">Strength</span>
          <span class="field">
            <input id="beingStr" type="text" size="3"> (1-100)
          </span>
        </p>
        
        <p>
          <span class="lbl">Dexterity</span>
          <span class="field">
            <input id="beingDex" type="text" size="3"> (1-100)
          </span>
        </p>
        
        <p>
          <span class="lbl">Const.</span>
          <span class="field">
            <input id="beingCon" type="text" size="3"> (1-100)
          </span>
        </p>
        
        <p>
          <span class="lbl">Wisdom</span>
          <span class="field">
            <input id="beingWis" type="text" size="3"> (1-100)
          </span>
        </p>
        
        <p>
          <span class="lbl">Intgce</span>
          <span class="field">
            <input id="beingItg" type="text" size="3"> (1-100)
          </span>
        </p>
        
        <p>
          <span class="lbl">Charisma</span>
          <span class="field">
            <input id="beingCha" type="text" size="3"> (1-100)
          </span>
        </p>
        </fieldset>
        
         <p>
          <div class="lbl">Resistant</div>
          <div class="field">
          
            <div class="cBoxUnit">
              <span class="cBox">p(iercing)</span>
              <input type="checkbox" name="beingResistant" value="p">
            </div>
            
            <div class="cBoxUnit">
              <span class="cBox">b(ludgeon)</span>
